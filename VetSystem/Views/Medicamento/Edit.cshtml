@model VetSystem.Models.Models.MedicamentoModel

@{
    ViewData["Title"] = "Edit";
}

<h4>Editar Medicamento</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="form-group mb-2">
                    <label asp-for="Id" class="control-label text-verde-escuro fw-bold"></label>
                    <input asp-for="Id" class="form-control" readonly />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="Nome" class="control-label text-verde-escuro fw-bold"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Especie" class="control-label text-verde-escuro fw-bold">Espécies</label>
                <select asp-for="Especie" asp-items="ViewBag.ListaDeEspecies" class="form-control text-uppercase">
                    <option disabled selected>--Selecione uma Espécie--</option>
                </select>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Laboratorio" class="control-label text-verde-escuro fw-bold"></label>
                <input asp-for="Laboratorio" class="form-control" />
                <span asp-validation-for="Laboratorio" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Tipo" class="control-label text-verde-escuro fw-bold"></label>
                <input asp-for="Tipo" class="form-control" />
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="DataInclusao" class="control-label text-verde-escuro fw-bold"></label>
                <input asp-for="DataInclusao" class="form-control" readonly />
                <span asp-validation-for="DataInclusao" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="DataAlteracao" class="control-label text-verde-escuro fw-bold"></label>
                <input asp-for="DataAlteracao" class="form-control" readonly />
                <span asp-validation-for="DataAlteracao" class="text-danger"></span>
            </div>
            <div class="row col-12 justify-content-between mt-4 m-0">
                <div class="row col-6 ">
                    <a class="text-decoration-none btn btn-outline-primary " asp-action="Index">< Voltar para a Lista</a>
                </div>
                <div class="row col-6 justify-content-end">
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>


