@model VetSystem.Models.Models.ClienteModel

<h4>Editar Cliente</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <partial name="_Cliente" />
           
            <div class="form-group">
            <label asp-for="DataInclusao" class="control-label"></label>
            <input asp-for="DataInclusao" class="form-control" readonly/>
            <span asp-validation-for="DataInclusao" class="text-danger"></span>
            </div>
            <div class="form-group">
            <label asp-for="DataAlteracao" class="control-label"></label>
            <input asp-for="DataAlteracao" class="form-control" readonly/>
            <span asp-validation-for="DataAlteracao" class="text-danger"></span>
            </div>
            <div class="row col-12 justify-content-between p-2 mt-2">
                <div class="row col-4 ">
                    <a class="text-decoration-none btn btn-outline-primary" asp-action="Index">< Voltar para a Lista</a>
                </div>
                <div class="row col-4 justify-content-end">
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
