@model VetSystem.Models.Models.ClienteModel

<div class="row col-12 mb-2">
    <div class="form-group col-6">
        <label asp-for="Cpf" class="control-label text-verde-escuro fw-bold"></label>
        <input asp-for="Cpf" class="form-control maskCpf" />
        <span asp-validation-for="Cpf" class="text-danger"></span>
    </div>
    <div class="form-group col-6">
        <label asp-for="Nome" class="control-label text-verde-escuro fw-bold"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
</div>
<div class="row col-12 ps-3 pe-3">
    <div class="form-group col-12 mt-3 p-0 ">
    <label asp-for="EspecieId" class="control-label text-verde-escuro fw-bold">Animais</label>
    <select asp-for="EspecieId" asp-items="ViewBag.ListaDeAnimais" class="form-control text-uppercase">
    </select>
</div>
</div>
<div class="row col-12 mb-2">
    <div class="form-group col-6">
        <label asp-for="DataNascimento" class="control-label text-verde-escuro fw-bold"></label>
        <input asp-for="DataNascimento" class="form-control" />
        <span asp-validation-for="DataNascimento" class="text-danger"></span>
    </div>
    <div class="form-group col-6">
        <label asp-for="Telefone" class="control-label text-verde-escuro fw-bold"></label>
        <input asp-for="Telefone" class="form-control maskTelefone" />
        <span asp-validation-for="Telefone" class="text-danger"></span>
    </div>
</div>
<div class="row col-12 mb-2">
    <div class="form-group col-12">
        <label asp-for="Celular" class="control-label text-verde-escuro fw-bold"></label>
        <input asp-for="Celular" class="form-control maskCelular" />
        <span asp-validation-for="Celular" class="text-danger"></span>
    </div>
    <div class="form-group col-12">
        <label asp-for="Logradouro" class="control-label text-verde-escuro fw-bold"></label>
        <input asp-for="Logradouro" class="form-control" />
        <span asp-validation-for="Logradouro" class="text-danger"></span>
    </div>
</div>
<div class="row col-12 mb-2">
    <div class="form-group col-6">
        <label asp-for="Numero" class="control-label text-verde-escuro fw-bold"></label>
        <input asp-for="Numero" class="form-control" />
        <span asp-validation-for="Numero" class="text-danger"></span>
    </div>
    <div class="form-group col-6">
        <label asp-for="Complemento" class="control-label text-verde-escuro fw-bold"></label>
        <input asp-for="Complemento" class="form-control" />
        <span asp-validation-for="Complemento" class="text-danger"></span>
    </div>
</div>
<div class="row col-12 mb-2">
    <div class="form-group col-12">
        <label asp-for="Cidade" class="control-label text-verde-escuro fw-bold"></label>
        <input asp-for="Cidade" class="form-control" />
        <span asp-validation-for="Cidade" class="text-danger"></span>
    </div>
    <div class="form-group col-12">
        <label asp-for="Estado" class="control-label text-verde-escuro fw-bold"></label>
        <input asp-for="Estado" class="form-control" />
        <span asp-validation-for="Estado" class="text-danger"></span>
    </div>
</div>
<div class="form-group form-check ms-2 mt-3">
    <label class="form-check-label text-verde-escuro fw-bold">
        <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
    </label>
</div>


